center
middle

function demo(){
	var length 9
	var stemlength 60
	repeat 15 {
		clear
		pencolor green
		back stemlength
		= stemlength [+ stemlength 5]
		forward stemlength
		pencolor red
		repeat 18 {
			repeat 6 {
				forward length
				left 60
			}
			left 20
		}
		= length [+ length 2]
		paint
		pause 100
	}
}

demo